{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "ES2015",
    "module": "esnext",
    "esModuleInterop": true,
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,
    "noEmit": false,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "outDir": "./dist", // Specify an output directory for all emitted files
    "rootDir": "./", // Specify the root directory of input files. Adjust as necessary.
  }
}