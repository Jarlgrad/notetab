{
  "manifest_version": 3,
  "name": "NoteTab",
  "version": "1.0",
  "description": "A handy notepad right in your new tab.",
  "permissions": [ "activeTab" ],
  "chrome_url_overrides": {
    "newtab": "./src/index.html"
  },
  "action": {
    "default_icon": {
      "16": "./images/notepad-icon.png",
      "48": "./images/notepad-icon.png",
      "128": "./images/notepad-icon.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}